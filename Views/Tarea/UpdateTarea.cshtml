@model tl2_tp10_2023_castroagustin.ViewModels.ModificarTareaViewModel


<form asp-controller="Tarea" asp-action="UpdateTarea">
    <div class="form-group">
        <input asp-for="@Model.Id" hidden />
        <input asp-for="@Model.IdTablero" hidden />
        <label asp-for="@Model.IdUsuarioAsignado">Id usuario asignado:</label>
        <input asp-for="@Model.IdUsuarioAsignado" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Nombre">Nombre:</label>
        <input asp-for="@Model.Nombre" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Descripcion">Descripcion:</label>
        <input asp-for="@Model.Descripcion" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Color">Color:</label>
        <input asp-for="@Model.Color" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Estado">Estado:</label>
        <input asp-for="@Model.Estado" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Enviar</button>
</form>