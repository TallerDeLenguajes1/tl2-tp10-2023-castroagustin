@model tl2_tp10_2023_castroagustin.ViewModels.CrearTareaViewModel


<form asp-controller="Tarea" asp-action="CreateTarea" class="container" style="max-width: 500px">
    <h4>Crear tarea en el tablero "@Model.NombreTablero"</h4>
    <div class="form-group">
        <input asp-for="@Model.IdTablero" class="form-control" hidden />
        <input asp-for="@Model.IdUsuarioPropietario" class="form-control" hidden />
        <label asp-for="@Model.IdUsuarioAsignado">Usuario asignado:</label>
        <select asp-for="@Model.IdUsuarioAsignado" class="form-select">
            <option value="" selected>Seleccionar</option>
            @foreach (var u in @Model.Usuarios)
            {
                <option value="@u.Id">@u.NombreDeUsuario</option>
            }
        </select>
        <span asp-validation-for="@Model.IdUsuarioAsignado" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Nombre">Nombre de la tarea:</label>
        <input asp-for="@Model.Nombre" class="form-control" />
        <span asp-validation-for="@Model.Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Descripcion">Descripcion de la tarea:</label>
        <input asp-for="@Model.Descripcion" class="form-control" />
        <span asp-validation-for="@Model.Descripcion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Color">Color:</label>
        <input asp-for="@Model.Color" class="form-control" />
        <span asp-validation-for="@Model.Color" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Estado">Estado:</label>
        <br>
        <select label asp-for="@Model.Estado">
            <option asp-for="@Model.Estado" class="form-control" value="0">Ideas</option>
            <option asp-for="@Model.Estado" class="form-control" value="1">ToDo</option>
            <option asp-for="@Model.Estado" class="form-control" value="2">Doing</option>
            <option asp-for="@Model.Estado" class="form-control" value="3">Review</option>
            <option asp-for="@Model.Estado" class="form-control" value="4">Done</option>
        </select>
        <span asp-validation-for="@Model.Estado" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Crear</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}