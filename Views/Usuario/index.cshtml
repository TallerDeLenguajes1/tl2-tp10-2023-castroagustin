@{
    ViewData["Title"] = "Home Page";
}

@model tl2_tp10_2023_castroagustin.ViewModels.ListarUsuariosViewModel

<h2> Lista de Usuarios </h2>
<table class="table table-striped">
    <thead>
        <th>Id</th>
        <th>Nombre</th>
        <th>Rol</th>
        <th></th>
        <th></th>
    </thead>
    <tbody>
        @foreach (var usuario in Model.Usuarios)
        {
            <tr>
                <td>@usuario.Id</td>
                <td>@usuario.NombreDeUsuario</td>
                <td>@usuario.Rol</td>
                <td><a asp-controller="Usuario" asp-action="UpdateUser" asp-route-id="@usuario.Id">Modificar</a></td>
                <td><a asp-controller="Usuario" asp-action="DeleteUser" asp-route-id="@usuario.Id">Eliminar</a></td>
            </tr>
        }
    </tbody>
</table>