@model tl2_tp10_2023_castroagustin.ViewModels.CrearUsuarioViewModel

<form asp-controller="Usuario" asp-action="CreateUser" class="container" style="max-width: 500px">
    <h4>Registrarse</h4>
    <div class="form-group">
        <label asp-for="@Model.NombreDeUsuario"></label>
        <input asp-for="@Model.NombreDeUsuario" class="form-control" />
        <span asp-validation-for="@Model.NombreDeUsuario" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Contrasenia"></label>
        <input asp-for="@Model.Contrasenia" class="form-control" type="password" />
        <span asp-validation-for="@Model.Contrasenia" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Crear</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}