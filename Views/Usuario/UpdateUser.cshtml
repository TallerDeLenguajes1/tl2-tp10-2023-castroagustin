@model tl2_tp10_2023_castroagustin.ViewModels.ModificarUsuarioViewModel


<form asp-controller="Usuario" asp-action="UpdateUser" class="container" style="max-width: 500px">
    <h4>Modificar usuario "@Model.NombreDeUsuario"</h4>
    <div class="form-group">
        <input asp-for="@Model.Id" hidden />
        <label asp-for="@Model.NombreDeUsuario"></label>
        <input asp-for="@Model.NombreDeUsuario" class="form-control" />
        <span asp-validation-for="@Model.NombreDeUsuario" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Contrasenia"></label>
        <input asp-for="@Model.Contrasenia" class="form-control" />
        <span asp-validation-for="@Model.Contrasenia" class="text-danger"></span>
    </div>
    @if (Context.Session.GetString("rol") == Roles.administrador.ToString())
    {
        <div class="form-group">
            <label asp-for="@Model.Rol">Rol:</label>
            <br>
            <select label asp-for="@Model.Rol">
                <option asp-for="@Model.Rol" class="form-control" value="0">Administrador</option>
                <option asp-for="@Model.Rol" class="form-control" value="1">Operador</option>
            </select>
        </div>
    }
    else
    {
        <input asp-for="@Model.Rol" hidden />
    }

    <button type="submit" class="btn btn-primary mt-3">Confirmar</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}