@model tl2_tp10_2023_castroagustin.ViewModels.LoginViewModel

<form asp-controller="Login" asp-action="Login" class="container" style="max-width: 500px" method="post">
    <h4>Iniciar sesion</h4>
    <div class="form-group">
        <label asp-for="@Model.Nombre"></label>
        <input asp-for="@Model.Nombre" class="form-control" />
        <span asp-validation-for="@Model.Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Contrasenia"></label>
        <input asp-for="@Model.Contrasenia" class="form-control" type="password" />
        <span asp-validation-for="@Model.Contrasenia" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Enviar</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
